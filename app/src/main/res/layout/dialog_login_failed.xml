<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_vzz"
    android:layout_height="@dimen/height_rsz"
    android:background="@drawable/radiud_bg"
    android:shadowColor="#7f000000"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="10"
    android:orientation="vertical"
    android:layout_gravity="center" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_rz"
        android:background="@drawable/radiud_lt_rt_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="@dimen/margin_tz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_failed"/>
        <TextView
            android:id="@+id/tv_universalhint_title"
            android:layout_marginTop="@dimen/margin_fz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/red"
            android:text="@string/login_err_title"
            android:textSize="@dimen/font_size_fz" />

        <TextView
            android:id="@+id/text_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_rz"
            android:gravity="center_horizontal"
            android:textColor="@color/font_color"
            android:text="@string/login_input_err"
            android:textSize="@dimen/font_size_tf" />
    </LinearLayout>

</LinearLayout>