<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/height_xzz"
    android:layout_height="@dimen/height_fzz"
    android:background="@drawable/radiud_bg">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sz"
        android:layout_alignParentTop="true"
        android:background="@drawable/radiud_lt_rt_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/waring_help_title"
            android:textColor="@color/white"
            android:textSize="@dimen/big_font_size" />

        <ImageView
            android:id="@+id/imageview_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fz"
            android:src="@drawable/icon_close_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sendcarcoupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">

            <LinearLayout
                android:layout_marginLeft="@dimen/margin_ozz"
                android:layout_marginRight="@dimen/margin_ozz"
                android:layout_marginTop="@dimen/margin_rz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_tz"
                        android:layout_margin="@dimen/margin_tz"
                        android:gravity="center"
                        android:text="@string/waring_help"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/font_size_rz" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_tz"
                    android:layout_margin="@dimen/margin_ot"
                    android:gravity="center"
                    android:text="@string/waring_help_c"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/font_size_rz" />

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ez"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_fz"
            android:layout_marginLeft="@dimen/margin_xv"
            android:layout_marginRight="@dimen/margin_xv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_rz"
                android:layout_weight="1"
                android:background="@drawable/btn_red_bg"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_green_bg"
                android:gravity="center"
                android:text="继续"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>