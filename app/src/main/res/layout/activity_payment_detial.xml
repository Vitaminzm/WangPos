<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.symboltech.wangpos.activity.PaymentDetialActivity">
    <include android:id="@+id/common_title_bar" layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_below="@id/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_40"
        android:paddingTop="@dimen/margin_15"
        android:orientation="vertical"
        android:layout_above="@+id/ll_member_hold_coupon">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_30"
            android:text="@string/order_info"
            android:textColor="@color/green"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:text="@string/order_id"
                android:textColor="@color/font_color"/>
            <TextView
                android:id="@+id/text_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:text="0"
                android:textColor="@color/font_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:text="@string/order_time"
                android:textColor="@color/font_color"/>
            <TextView
                android:id="@+id/text_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:text="0"
                android:textColor="@color/font_color"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="@string/order_money"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:id="@+id/text_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="0"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/yuan"
                    android:textColor="@color/font_color"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_coupon"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="@string/coupon_m"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:id="@+id/text_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="0"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/yuan"
                    android:textColor="@color/font_color"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="@string/order_time"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="0"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/yuan"
                    android:textColor="@color/font_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="@string/order_time"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:text="0"
                    android:textColor="@color/font_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="@string/yuan"
                    android:textColor="@color/font_color"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_30"
            android:layout_marginTop="@dimen/margin_15"
            android:text="@string/pay_info"
            android:textColor="@color/red"/>
        <GridView
            android:id="@+id/activity_payment_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@drawable/gridview_selector"
            android:numColumns="2"
            android:scrollbars="none"/>

        <LinearLayout
            android:id="@+id/ll_score_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_30"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/score_info"
                android:textColor="@color/red"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="@string/add_score_m"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="0"
                        android:textColor="@color/font_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="@string/consume_score_m"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="0"
                        android:textColor="@color/font_color"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="@string/score_deduction_cash_m"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="0"
                        android:textColor="@color/font_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="@string/now_score_m"
                        android:textColor="@color/font_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_24"
                        android:text="0"
                        android:textColor="@color/font_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_confirm"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_width="match_parent"
        android:text="@string/done"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_green_bg"
        android:layout_height="@dimen/height_80" />

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_above="@id/text_confirm"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_30"
        android:orientation="horizontal"
        android:layout_height="@dimen/height_80">
        <TextView
            android:id="@+id/text_cancle_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/print_coupon"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margin_30"
            android:background="@drawable/btn_blue_bg"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/text_submit_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/selected_plate"
            android:background="@drawable/btn_blue_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_member_hold_coupon"
        android:layout_above="@id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_30"
            android:textColor="@color/font_color"
            android:layout_centerVertical="true"
            android:text="@string/send_coupon"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_80"
            android:scrollbars="none"
            android:listSelector="@drawable/gridview_selector"
            android:cacheColorHint="@color/transparent" />
    </LinearLayout>
</RelativeLayout>
