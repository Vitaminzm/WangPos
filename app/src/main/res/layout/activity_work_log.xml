<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg_color"
    tools:context="com.symboltech.wangpos.activity.WorkLogActivity">
    <include android:id="@+id/common_title_bar" layout="@layout/common_title_bar" />
    <RelativeLayout
        android:id="@+id/rl_title_sallor"
        android:background="@color/color_bg"
        android:layout_below="@id/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ef">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_collection"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/font_size_rz"
                android:text="@string/collection_statistics"
                android:textColor="@color/green"/>
            <TextView
                android:id="@+id/text_return"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/return_statistics"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_size_rz"
                android:textColor="@color/white_font_color"/>
            <TextView
                android:id="@+id/text_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/statistics"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_size_rz"
                android:textColor="@color/white_font_color"/>
        </LinearLayout>
        <com.symboltech.wangpos.view.ScllorTabView
            android:id="@+id/scllortabview"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="4dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_shop_info"
        android:layout_below="@id/rl_title_sallor"
        android:layout_margin="@dimen/margin_rz"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_tf"
            android:layout_gravity="center"
            android:textColor="@color/font_color"
            android:text="@string/desk_code_no"/>
        <TextView
            android:id="@+id/text_desk_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_tf"
            android:layout_gravity="center"
            android:textColor="@color/font_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_tf"
            android:layout_marginLeft="@dimen/margin_rz"
            android:layout_gravity="center"
            android:textColor="@color/font_color"
            android:text="@string/shop_m"/>
        <TextView
            android:id="@+id/text_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_tf"
            android:layout_gravity="center"
            android:textColor="@color/font_color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_print"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_rz"
        android:layout_marginLeft="@dimen/margin_rz"
        android:layout_marginBottom="@dimen/margin_fz"
        android:layout_width="match_parent"
        android:text="@string/print"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/btn_green_bg"
        android:layout_height="@dimen/height_ez" />
    <com.symboltech.wangpos.view.DecoratorViewPager
        android:id="@+id/view_pager_statistics"
        android:layout_below="@id/ll_shop_info"
        android:layout_above="@id/text_print"
        android:layout_marginRight="@dimen/margin_rz"
        android:layout_marginLeft="@dimen/margin_rz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
