<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context="com.symboltech.wangpos.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="114dp"
            android:layout_gravity="center"
            android:textSize="46sp"
            android:text="@string/intelligentPOS"/>

        <LinearLayout
            android:id="@+id/ll_desk_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="@string/desk_code"/>
            <TextView
                android:id="@+id/desk_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cashier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="@string/cashier_name"/>
            <TextView
                android:id="@+id/cashier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lock_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/edit_bg">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/icon_lock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/waring_yellow"
                    android:textSize="30sp"
                    android:text="@string/lock_info"/>
            </LinearLayout>
            <com.symboltech.wangpos.view.DrawableEditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:paddingLeft="23dp"
                android:gravity="center"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/icon_username_bg_selector"
                android:drawableRight="@drawable/login_username_choose_selector"
                android:textColorHint="@color/colorPrimary"
                android:background="@drawable/edittext_bg_selector"
                android:hint="@string/username_hint"/>
            <com.symboltech.wangpos.view.DrawableEditText
                android:id="@+id/edit_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:paddingLeft="23dp"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:paddingRight="120dp"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/icon_password_bg_selector"
                android:textColorHint="@color/gray"
                android:background="@drawable/edittext_bg_selector"
                android:hint="@string/password_hint"/>
        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:focusable="true"
            android:background="@drawable/login_bt_selector"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:text="@string/login"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="28dp"
            android:layout_gravity="right">
            <ImageView
                android:id="@+id/about"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="34dp"
                android:src="@drawable/btn_icon_about_selector"/>

            <ImageView
                android:id="@+id/loginout"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/btn_logout_selector"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
