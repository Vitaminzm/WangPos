<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/view_bg_color"
    android:layout_height="@dimen/height_140">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_70"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_gravity="center"
                    android:textColor="@color/font_color"
                    android:text="@string/desk_code_no"/>
                <TextView
                    android:id="@+id/text_desk_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_gravity="center"
                    android:textColor="@color/font_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_gravity="center"
                    android:textColor="@color/font_color"
                    android:text="@string/bill_id"/>
                <TextView
                    android:id="@+id/text_bill_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_24"
                    android:layout_gravity="center"
                    android:textColor="@color/font_color"
                    android:text="                "/>
            </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:layout_gravity="center"
                android:textColor="@color/font_color"
                android:text="@string/cashier_name"/>
            <TextView
                android:id="@+id/text_cashier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:layout_gravity="center"
                android:textColor="@color/font_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:layout_gravity="center"
                android:textColor="@color/font_color"
                android:text="@string/salesman"/>
            <TextView
                android:id="@+id/text_saleman_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_24"
                android:layout_gravity="center"
                android:textColor="@color/font_color"
                android:text="                "/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_gravity="center"
        android:layout_width="@dimen/line_680"
        android:background="@color/view_line_color"
        android:layout_height="1dp"/>
</LinearLayout>
