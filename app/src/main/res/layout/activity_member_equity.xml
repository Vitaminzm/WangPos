<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg_color"
    android:id="@+id/ll_keyboard"
    tools:context="com.symboltechshop.wangpos.activity.MemberEquityActivity">

    <include android:id="@+id/common_title_bar" layout="@layout/common_title_bar" />

    <LinearLayout
        android:id="@+id/ll_member_hold_coupon"
        android:layout_below="@id/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_rz"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_rz"
            android:textColor="@color/font_color"
            android:layout_centerVertical="true"
            android:text="@string/member_hold_coupon"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/imageview_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_qr"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_hold_coupon"
        android:layout_marginTop="@dimen/margin_rz"
        android:layout_marginBottom="@dimen/margin_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:listSelector="@drawable/gridview_selector"
        android:cacheColorHint="@color/transparent" />
        <View
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:background="@color/view_line_color"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_member_hold_coupon"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/margin_rz"
        android:layout_marginLeft="@dimen/margin_rz"
        android:layout_marginBottom="@dimen/margin_fz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_rz"
            android:textColor="@color/font_color"
            android:layout_centerVertical="true"
            android:text="@string/score_deduction"
            android:gravity="center"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_rz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:text="@string/hole"
                android:textColor="@color/font_color"/>
            <TextView
                android:id="@+id/text_hold_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_rx"
                android:layout_marginLeft="@dimen/margin_ez"
                android:text="0"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:layout_marginLeft="@dimen/margin_xv"
                android:text="@string/fen"
                android:textColor="@color/font_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:layout_marginLeft="@dimen/margin_tz"
                android:text="(最多使用"
                android:textColor="@color/title_gray"/>
            <TextView
                android:id="@+id/text_max_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:text="0"
                android:textColor="@color/title_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:text="分)"
                android:textColor="@color/title_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_rz"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:text="@string/uesed"
                android:textColor="@color/font_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="@dimen/margin_rz"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_used_score"
                    android:layout_width="@dimen/height_oxz"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_rz"
                    android:gravity="center"
                    android:hint="请输入积分"
                    android:text="0"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/edit_font_color"/>
                <View
                    android:id="@+id/view_line"
                    android:layout_width="@dimen/height_oxz"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:layout_marginLeft="@dimen/margin_rz"
                android:text="@string/fen"
                android:textColor="@color/font_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_ovv"
                android:textSize="@dimen/font_size_tf"
                android:text="@string/deduction"
                android:textColor="@color/font_color"/>
            <TextView
                android:id="@+id/text_deduction_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_rx"
                android:layout_marginLeft="@dimen/margin_vz"
                android:text="0"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_tf"
                android:layout_marginLeft="@dimen/margin_tz"
                android:text="@string/yuan"
                android:textColor="@color/font_color"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_confirm"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_rz"
        android:layout_marginLeft="@dimen/margin_rz"
        android:layout_marginBottom="@dimen/margin_fz"
        android:layout_width="match_parent"
        android:text="@string/confirm"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_height="@dimen/height_ez" />
</RelativeLayout>
