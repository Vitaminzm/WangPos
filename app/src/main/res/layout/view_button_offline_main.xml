<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_offline"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:layout_marginRight="@dimen/btn_margin"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_bg" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_offline_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_upload"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_blue_bg" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_upload_icon" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_bank"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:layout_marginRight="@dimen/btn_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_blue_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_bank_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weichat"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_blue_bg" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_weichat_icon" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/btn_margin"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_salereturn"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:layout_marginRight="@dimen/btn_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/btn_blue_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_salereturn_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_width"
            android:visibility="invisible"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_blue_bg" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_weichat_icon" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>