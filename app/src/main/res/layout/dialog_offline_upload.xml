<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_xzz"
    android:layout_height="@dimen/height_fzz" >
    <ImageView
        android:id="@+id/image_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_rz"
        android:background="@color/color_bg" />
    <LinearLayout
        android:layout_below="@id/image_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_offline_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/offline_msg"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>