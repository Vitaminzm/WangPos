<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_rtt"
    android:layout_marginRight="20dp"
    android:id="@+id/rl_background"
    android:background="@mipmap/bg_orange_coupon"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_unit"
            android:text="ï¿¥"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_rx"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/item_coupon_money"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_oz"
            android:layout_marginRight="@dimen/margin_oz"
            android:text="110"
            android:textSize="@dimen/font_size_ft"
            android:textColor="@color/orange" />
        <TextView
            android:id="@+id/item_coupon__unit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/yuan"
            android:textSize="@dimen/font_size_rx"
            android:textStyle="bold"
            android:textColor="@color/orange" />
        <com.symboltech.wangpos.view.TextScrollView
            android:id="@+id/item_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:text="@string/coupon"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_size_rx"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageview_coupon_selected"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_coupon_selected"/>
</RelativeLayout>
