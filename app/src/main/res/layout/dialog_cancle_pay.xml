<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_600"
    android:layout_height="@dimen/height_500"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_70"
        android:background="@color/color_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancle_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/big_font_size"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/imageview_close"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/title_icon_back"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_already_pay"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_95"
        android:layout_marginLeft="@dimen/margin_95"
        android:layout_below="@id/title_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_24"
            android:text="@string/already_pay"
            android:textColor="@color/font_color"/>
        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_36"
            android:layout_marginLeft="@dimen/margin_30"
            android:text="0"
            android:textColor="@color/view_font_red_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_24"
            android:layout_marginLeft="5dp"
            android:text="@string/yuan"
            android:textColor="@color/font_color"/>
    </LinearLayout>
    <ListView
        android:layout_below="@id/ll_already_pay"
        android:id="@+id/gridview_saleman"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_230"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_95"
        android:layout_marginLeft="@dimen/margin_95"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@drawable/gridview_selector"
        android:scrollbars="none"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_65"
        android:layout_marginLeft="@dimen/margin_65"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="horizontal"
        android:layout_height="@dimen/height_80">
        <TextView
            android:id="@+id/text_cancle_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/cancle"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/margin_30"
            android:background="@drawable/orange_corner_bt_selector"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/text_submit_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:background="@drawable/login_bt_selector"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>