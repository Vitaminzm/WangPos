<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.symboltech.wangpos.activity.MemberAccessActivity">
    <include layout="@layout/common_title_bar" />
    <LinearLayout
        android:id="@+id/ll_phone_number"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="62dp"
            android:layout_marginRight="62dp">
            <ImageView
                android:id="@+id/imageview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone_before_selected"/>
            <EditText
                android:id="@+id/edit_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/edit_font_color"
                android:hint="@string/please_input_phoneNo"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_marginTop="8dp"
            android:layout_width="342dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/text_add_or_verify_member"
            android:layout_marginTop="25dp"
            android:layout_width="377dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:text="@string/add_or_verify_member"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/login_bt_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_swaip_card"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/font_color"
            android:text="@string/please_swip_card"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="62dp"
        android:textColor="@color/font_color"
        android:text="@string/other_verify_type"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:drawableTop="@mipmap/phone_number_after"
            android:drawablePadding="10dp"
            android:textColor="@color/red"
            android:text="@string/phone_number"/>
        <TextView
            android:id="@+id/text_vip_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="56dp"
            android:drawableTop="@mipmap/vip_card_before"
            android:drawablePadding="10dp"
            android:textColor="@color/green"
            android:text="@string/vip_card"/>
        <TextView
            android:id="@+id/text_sacn_QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="56dp"
            android:drawableTop="@mipmap/scan_qr_before"
            android:drawablePadding="10dp"
            android:textColor="@color/green"
            android:text="@string/scan_QR"/>
    </LinearLayout>
</LinearLayout>
